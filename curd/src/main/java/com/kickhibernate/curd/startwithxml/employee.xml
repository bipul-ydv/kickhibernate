<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.kickhibernate.curd.startwithxml.Employee">
        <id name="id" type="java.lang.Long"></id>
        <property name="firstName" type="java.lang.String" length="255"></property>
        <property name="lastName" type="java.lang.String" length="255"></property>
    </class>
</hibernate-mapping>